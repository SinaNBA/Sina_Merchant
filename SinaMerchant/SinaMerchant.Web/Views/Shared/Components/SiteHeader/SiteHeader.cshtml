<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
        <div class="container-fluid bg-dark bg-opacity-75 ps-5">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">SinaMerchant</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white-50" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex">
                        <a class="pe-5 nav-link text-white-50">Welcome @User.Identity.Name</a>
                    </div>
                    <div class="d-flex">
                        <a class="pe-5 nav-link text-white-50" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                }
                else
                {
                    <div class="d-flex">
                        <a class="pe-5 nav-link text-white-50" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                    <div class="d-flex">
                        <a class="pe-5 nav-link text-white-50" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                }

            </div>
        </div>
    </nav>
</header>