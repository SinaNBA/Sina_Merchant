<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SinaMerchant.Web</title>
    <partial name="_HeaderReferences" />
    @RenderSection("AdditionalHeadReferences", required: false)
</head>
<body>
    @await Component.InvokeAsync("SiteHeader")
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        @await Component.InvokeAsync("SiteFooter")
    </footer>
    <partial name="_FooterReferences" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
