@model ForgotPassModelView
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "ForgotPassword";
}
<div class="form-signin w-100 m-auto">
<h4>Please enter your email</h4>
<form asp-controller="Account" asp-action="ForgotPassword">

      <div class="form-floating resetButton">
     <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
     <label asp-for="Email" for="floatingInput">Email address</label>
         <span asp-validation-for="Email" class="text-danger"></span>
  </div>

            <button class="w-100 btn btn-lg btn-primary resetButton" type="submit">Reset Password</button>
    <a asp-controller="Account" asp-action="Login">Login</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }