@model RegisterViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Register";
}

<main class="form-signin w-100 m-auto">
    <form asp-controller="Account" asp-action="Register">

        <img class="mb-4" src="~/Images/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Please Register</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Email" for="floatingInput">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating Pass">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password" for="floatingPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating ConfirmPass">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password">
            <label asp-for="ConfirmPassword" for="floatingPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
        <a asp-controller="Account" asp-action="Login">Login</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2017–2022</p>
    </form>
</main>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }